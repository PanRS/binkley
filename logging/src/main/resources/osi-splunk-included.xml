<included>
    <!-- Out of the box, Splunk AUDIT logger sends to console -->
    <variable name="logback.splunk" value="${logback.splunk:-console}"/>

    <if condition='"console".equals("${logback.splunk}")'>
        <then>
            <!-- Audits get special treatment, in addition to regular treatment. -->
            <appender name="audit" class="ch.qos.logback.core.ConsoleAppender">
                <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
                    <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                        <marker>AUDIT</marker>
                    </evaluator>
                    <onMatch>NEUTRAL</onMatch>
                    <onMismatch>DENY</onMismatch>
                </filter>
                <encoder>
                    <pattern>${${logback.style:-standard}}</pattern>
                </encoder>
            </appender>
        </then>
        <else>
            <if condition='"tcp".equals("${logback.splunk}")'>
                <then>
                    <appender name="audit"
                              class="com.splunk.logging.logback.appender.SplunkRawTCPAppender">
                        <host>${logback.splunkHost:-localhost}</host>
                        <port>${logback.splunkPort:-5151}</port>
                        <maxQueueSize>${logback.splunkMaxQueueSize:-5MB}</maxQueueSize>
                        <dropEventsOnQueueFull>${logback.splunkDropEventsOnQueueFull:-false}
                        </dropEventsOnQueueFull>
                        <!-- TODO: Update to support encoder, not layout -->
                        <layout class="ch.qos.logback.classic.PatternLayout">
                            <!-- TODO: Needs testing: will exceptions stacks work this way? -->
                            <pattern>${${logback.style:-standard}}</pattern>
                        </layout>
                    </appender>
                </then>
                <else>
                    <!-- Value is ABSOLUTE path to audit log file -->
                    <!-- See http://logback.qos.ch/manual/appenders.html#FileAppender -->
                    <appender name="audit" class="ch.qos.logback.core.FileAppender">
                        <!-- TODO: How to use a formatted string for logfile name? -->
                        <file>${logback.splunk}-${logback.timestamp}.log</file>
                        <!-- Performance penalties, especially on NFS, but guarantees no loss -->
                        <prudent>true</prudent>
                        <encoder>
                            <pattern>${${logback.style:-standard}}</pattern>
                        </encoder>
                    </appender>
                </else>
                <!-- TODO: Support Splunk REST API -->
            </if>
        </else>
    </if>

    <!-- Logback does not replace existing appenders; include this LAST to preserve the above -->
    <include resource="osi-support-loggers-included.xml"/>
</included>
